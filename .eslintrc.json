{
  "extends": [
    "eslint:recommended",
    "idiomatic"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jquery": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "chrome": true
  },
  "rules": {
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "never",
      "exports": "never",
      "functions": "never"
    }],
    "one-var": ["error", "never"],
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-console": 0,
    "space-in-parens": ["error", "always"],
    "prefer-template": "warn",
    "eol-last": 0,
    "func-names": 0
  }
}
